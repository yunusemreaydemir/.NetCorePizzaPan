@model Pizzapan.EntityLayer.Concrete.Contact

<section class="w3l-contact-11 py-5">
    <div class="contacts-main py-lg-5 py-md-4">
        <div class="contant11-top-bg">
            <div class="container">
                <div class="title-content text-center">
                    <h3 class="title-big">Bizimle İletişime Geçin</h3>
                </div>
                <div class="d-grid contact section-gap mt-lg-5 mt-4">
                    <div class="contact-info-left d-grid text-center">
                        <div class="contact-info">
                            <span class="fa fa-map-marker" aria-hidden="true"></span>
                            <h4>Adres</h4>
                            <p>@ViewBag.address</p>
                        </div>
                        <div class="contact-info">
                            <span class="fa fa-phone" aria-hidden="true"></span>
                            <h4>Telefon Numarası</h4>
                            <p><a href="tel:+1-2345-678-11">@ViewBag.phone</a></p>
                            <p><a href="mailto:pizza@order.com" class="email">@ViewBag.mail</a></p>
                        </div>
                        <div class="contact-info">
                            <span class="fa fa-clock-o" aria-hidden="true"></span>
                            <h4>Çalışma Saatlerimiz</h4>
                            <p>@ViewBag.workingDay</p>
                            <p>@ViewBag.workingHours</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-41-mian section-gap mt-5">
            <div class="container">
                <div class="d-grid align-form-map">
                    <div class="form-inner-cont">
                        <form action="/Contact/AddMessage" method="post" class="signin-form">
                            <div class="form-input">
                                <label for="w3lName">Adınız</label>
                                <input type="text" name="Name" id="w3lName" placeholder="" />
                            </div>
                            <div class="form-input">
                                <label for="w3lSender">Email</label>
                                <input type="email" name="Email" id="w3lSender" placeholder="" required="" />
                            </div>
                            <div class="form-input">
                                <label for="w3lName">Konu</label>
                                <input type="text" name="Subject" id="w3lName" placeholder="" />
                            </div>
                            <div class="form-input">
                                <label for="w3lMessage">Mesaj</label>
                                <textarea placeholder="" name="Message" id="w3lMessage" required=""></textarea>
                            </div>

                            <button type="submit" class="btn btn-style btn-primary">Gönder</button>

                        </form>
                    </div>


                    <div class="map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d194972.03646225194!2d28.86748066481918!3d40.22156112828111!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ca1582d8d45695%3A0x61a00555fc973392!2sBursa!5e0!3m2!1str!2str!4v1690054359136!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
</section>

