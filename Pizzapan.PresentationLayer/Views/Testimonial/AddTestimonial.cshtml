@model Pizzapan.EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Referans Ekleme Sayfası</h1>

<form method="post">
    <label>Referans Adı</label>
    <input asp-for="CustomerName" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <label>Alt Başlık</label>
    <input asp-for="CustomerTitle" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <label>İçerik</label>
    <input asp-for="Comment" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <label>Resim Url</label>
    <input asp-for="ImageUrl" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <button class="btn btn-primary">Referans Ekle</button>
</form>
